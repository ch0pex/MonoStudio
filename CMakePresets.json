{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 30
  },
  "configurePresets": [
    {
      "name": "msvc",
      "inherits": "base",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/msvc",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "23",
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;Sanitize",
        "CMAKE_CXX_FLAGS_SANITIZE": "/fsanitize=address /Zi",
        "CMAKE_EXE_LINKER_FLAGS_SANITIZE": "/INCREMENTAL:NO"
      },
      "vendor": {
        "jetbrains.com/clion": {
          "toolchain": "Visual Studio"
        }
      }
    },
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_STANDARD": "26",
        "CMAKE_CXX_STANDARD_REQUIRED": "ON",
        "CMAKE_CXX_EXTENSIONS": "OFF",
        "CMAKE_EXPORT_COMPILE_COMMANDS": true,
        "CONAN_INSTALL_ARGS": "--build=missing;-u",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo;Sanitize",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "cmake/Modules/conan_provider.cmake",
        "BUILD_TESTING": true
      }
    },
    {
      "name": "unix-base",
      "inherits": "base",
      "hidden": true,
      "generator": "Ninja",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-Wextra -Wall -Werror -pedantic-errors -Wno-unused-parameter -Wno-empty-body -Wno-deprecated-variadic-comma-omission"
      }
    },
    {
      "name": "mixin-flags-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_RELEASE": "-flto=auto -O3 -DNDEBUG"
      }
    },
    {
      "name": "mixin-flags-sanitize",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_SANITIZE": "-O1 -g -fsanitize=address,undefined -fno-omit-frame-pointer",
        "CMAKE_EXE_LINKER_FLAGS_SANITIZE": "-fsanitize=address,undefined"
      }
    },
    {
      "name": "mixin-flags-coverage",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_CXX_FLAGS_COVERAGE": "-g -O0 -coverage -fprofile-arcs -ftest-coverage",
        "CMAKE_EXE_LINKER_FLAGS_COVERAGE": "--coverage"
      }
    },
    {
      "name": "gcc-debug",
      "inherits": "unix-base",
      "binaryDir": "${sourceDir}/build/gcc/debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "gcc-release",
      "inherits": [
        "unix-base",
        "mixin-flags-release"
      ],
      "binaryDir": "${sourceDir}/build/gcc/release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "gcc-relwithdebinfo",
      "inherits": [
        "unix-base",
        "mixin-flags-release"
      ],
      "binaryDir": "${sourceDir}/build/gcc/relwithdebinfo",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo"
      }
    },
    {
      "name": "gcc-sanitize",
      "inherits": [
        "unix-base",
        "mixin-flags-sanitize"
      ],
      "binaryDir": "${sourceDir}/build/gcc/sanitize",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Sanitize"
      }
    },
    {
      "name": "gcc-coverage",
      "inherits": [
        "unix-base",
        "mixin-flags-coverage"
      ],
      "binaryDir": "${sourceDir}/build/gcc/coverage",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_BUILD_TYPE": "Coverage"
      }
    },
    {
      "name": "clang-debug",
      "inherits": "unix-base",
      "binaryDir": "${sourceDir}/build/clang/debug",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF"
      }
    },
    {
      "name": "clang-release",
      "inherits": [
        "unix-base",
        "mixin-flags-release"
      ],
      "binaryDir": "${sourceDir}/build/clang/release",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF"
      }
    },
    {
      "name": "clang-relwithdebinfo",
      "inherits": [
        "unix-base",
        "mixin-flags-release"
      ],
      "binaryDir": "${sourceDir}/build/clang/relwithdebinfo",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF"
      }
    },
    {
      "name": "clang-sanitize",
      "inherits": [
        "unix-base",
        "mixin-flags-sanitize"
      ],
      "binaryDir": "${sourceDir}/build/clang/sanitize",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_BUILD_TYPE": "Sanitize",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_CXX_SCAN_FOR_MODULES": "OFF"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "Debug-msvc",
      "configurePreset": "msvc",
      "configuration": "Debug"
    },
    {
      "name": "Release-msvc",
      "configurePreset": "msvc",
      "configuration": "Release"
    },
    {
      "name": "RelWithDebInfo-msvc",
      "configurePreset": "msvc",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "Sanitize-msvc",
      "configurePreset": "msvc",
      "configuration": "Sanitize"
    },
    {
      "name": "Debug-gcc",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "Release-gcc",
      "configurePreset": "gcc-release"
    },
    {
      "name": "RelWithDebInfo-gcc",
      "configurePreset": "gcc-relwithdebinfo"
    },
    {
      "name": "Sanitize-gcc",
      "configurePreset": "gcc-sanitize"
    },
    {
      "name": "Coverage-gcc",
      "configurePreset": "gcc-coverage"
    },
    {
      "name": "Debug-clang",
      "configurePreset": "clang-debug"
    },
    {
      "name": "Release-clang",
      "configurePreset": "clang-release"
    },
    {
      "name": "RelWithDebInfo-clang",
      "configurePreset": "clang-relwithdebinfo"
    },
    {
      "name": "Sanitize-clang",
      "configurePreset": "clang-sanitize"
    }
  ],
  "testPresets": [
    {
      "name": "base-test",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "noTestsAction": "error",
        "stopOnFailure": true,
        "jobs": 8
      }
    },
    {
      "name": "Debug-msvc",
      "inherits": "base-test",
      "configurePreset": "msvc",
      "configuration": "Debug"
    },
    {
      "name": "Release-msvc",
      "inherits": "base-test",
      "configurePreset": "msvc",
      "configuration": "Release"
    },
    {
      "name": "RelWithDebInfo-msvc",
      "inherits": "base-test",
      "configurePreset": "msvc",
      "configuration": "RelWithDebInfo"
    },
    {
      "name": "Sanitize-msvc",
      "inherits": "base-test",
      "configurePreset": "msvc",
      "configuration": "Sanitize"
    },
    {
      "name": "Debug-gcc",
      "inherits": "base-test",
      "configurePreset": "gcc-debug"
    },
    {
      "name": "Release-gcc",
      "inherits": "base-test",
      "configurePreset": "gcc-release"
    },
    {
      "name": "RelWithDebInfo-gcc",
      "inherits": "base-test",
      "configurePreset": "gcc-relwithdebinfo"
    },
    {
      "name": "Sanitize-gcc",
      "inherits": "base-test",
      "configurePreset": "gcc-sanitize"
    },
    {
      "name": "Debug-clang",
      "inherits": "base-test",
      "configurePreset": "clang-debug"
    },
    {
      "name": "Release-clang",
      "inherits": "base-test",
      "configurePreset": "clang-release"
    },
    {
      "name": "RelWithDebInfo-clang",
      "inherits": "base-test",
      "configurePreset": "clang-relwithdebinfo"
    },
    {
      "name": "Sanitize-clang",
      "inherits": "base-test",
      "configurePreset": "clang-sanitize"
    }
  ]
}